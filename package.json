{
  "name": "json-designer",
  "version": "1.0.0",
  "description": "A web application to model JSON data.",
  "scripts": {
    "css:tw": "npx tailwindcss -i src/custom.css -o src/style.css --watch",
    "css:lit": "npx twlit --input ./src/style.css --output ./src/style.css.js",
    "dev:css": "concurrently \"npm run css:tw\" \"npm run css:lit\"",
    "dev": "concurrently \"npm run dev:css\" \"npx vite\"",
    "test": "echo \"Error: no test specified\" && exit 1",
    "build": "npx vite build",
    "start": "npx vite preview"
  },
  "type": "module",
  "author": "Daniel Abgottspon",
  "license": "UNLICENSED",
  "dependencies": {
    "@fortawesome/fontawesome-free": "^6.7.2",
    "concurrently": "^9.1.2",
    "esbuild": "^0.24.2",
    "esbuild-copy-files-plugin": "^1.2.1",
    "lit": "^3.2.1",
    "sortablejs": "^1.15.6",
    "tailwindcss": "^3.4.17",
    "vite": "^6.1.0"
  },
  "devDependencies": {
    "twlit": "^0.0.1-alpha.37"
  }
}
